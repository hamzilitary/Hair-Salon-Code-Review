
@{
  Layout = "_Layout";
}
<h3>Add A New Client to @Model.GetName()</h3>
<form action="/stylists/@Model.GetId()/clients" method="post">
  <div class="form-group">
    <label for="new-client">Client Description</label>
    <input type="text" id="new-client" name="new-client" class="form-control">
  </div>

  <button type="submit" class="btn btn-secondary btn-lg"><img src="https://media.boingboing.net/wp-content/uploads/2014/05/zed-horse-b-800-.gif" width="50" height="30">Add Client</button>
  <a href="/" class="btn btn-secondary btn-lg" role="button"><img src="https://openclipart.org/download/263947/House-4.svg" width="30" height="30">Return Home</a>
</form>
