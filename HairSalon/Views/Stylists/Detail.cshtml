@{
  Layout = "_Layout";
}

<h1>@Model["stylist"].GetName()</h1>
<form method="post" action='/stylists/@Model["stylist"].GetId()/clients/sort'>
  <small class="text-muted">SORT BY DATE:</small>
  <button type="submit" name="selection" class="btn btn-primary" value="ASC">^</button>
  <button type="submit" name="selection" class= "btn btn-primary" value="DESC">v</button>
</form>
@foreach (var client in @Model["clients"])
{
  <h4>@client.GetDescription()<a href="/clients/@client.GetId()/update">Edit</a> | <a href="/clients/@client.GetId()/delete">Delete</a></h4>
}
<br>
<br>
<p><a href='/stylists/@Model["stylist"].GetId()/clients/new' class="btn btn-secondary btn-lg" role="button"><img src="https://media.giphy.com/media/zpPjlIncVkUc8/giphy.gif" width="50" height="50"> Add a new client</a></p>
<p><a href="/" class="btn btn-secondary btn-lg" role="button"><img src="https://openclipart.org/download/263947/House-4.svg" width="30" height="30">Return Home</a>
</p>
